{
  "name": "lb-cli",
  "version": "0.1.0",
  "description": "Linear-native beads-style issue tracker CLI",
  "type": "module",
  "bin": {
    "lb": "./dist/lb"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:integration": "bun test test/integration.test.ts",
    "build": "bun build src/cli.ts --outdir dist --target node",
    "build:bin": "bun build src/cli.ts --compile --outfile dist/lb",
    "build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile dist/lb-linux-x64",
    "build:linux-arm64": "bun build src/cli.ts --compile --target=bun-linux-arm64 --outfile dist/lb-linux-arm64",
    "build:darwin-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/lb-darwin-x64",
    "build:darwin-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/lb-darwin-arm64",
    "build:windows-x64": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile dist/lb-windows-x64.exe",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "graphql-request": "^7.1.2",
    "graphql": "^16.9.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  }
}
